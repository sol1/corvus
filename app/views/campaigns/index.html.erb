<h1>Campaigns</h1>

<%= link_to 'New Campaign', new_campaign_path, :class => "btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number Ranges</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td>
          <% for number_range in campaign.number_ranges %>
            <%= number_range.start %> - <%= number_range.end %>
            <%= raw "<br />" unless campaign.number_ranges[-1] == number_range %>
          <% end %>
        </td>

        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

