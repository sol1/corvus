<h1>Teams</h1>

<%= link_to 'New Team', new_team_path, :class => "btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number Ranges</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <% for number_range in team.number_ranges %>
            <%= number_range.start %> - <%= number_range.end %>
            <%= raw "<br />" unless team.number_ranges[-1] == number_range %>
          <% end %>
        </td>
        <td>
          <% for user in team.users %>
            <%= user.email %>
            <%= raw "<br />" unless team.users[-1] == user %>
          <% end %>
        </td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

